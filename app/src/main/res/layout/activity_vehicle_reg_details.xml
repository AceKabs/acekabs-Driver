<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/reg_header"
        layout="@layout/stan_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#DCDCDC"
        android:gravity="center"
        android:text="Vehicle Registration Documents"
        android:textColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vh_screen1_lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vh_screen1_lay11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/car_reg_front"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/car_reg_front_label"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="CAR REGISTRATION FRONT"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vel_screen1_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/car_reg_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/car_reg_back_label"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="CAR REGISTRATION BACK"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_top"
                android:background="#DCDCDC"
                android:gravity="center"
                android:text="Vehicle Insurance Documents"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/per_screen1_lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_left">

                <LinearLayout
                    android:id="@+id/per_screen1_lay31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/vel_insurance_docs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/vel_insu_doc"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="VEHICLE INSURANCE DOCS"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/per_screen1_lay4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay_reg_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_top"
                android:layout_marginRight="@dimen/padding_top"
                android:layout_marginTop="@dimen/padding_top"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reg_btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:text="SUBMIT"
                    android:textColor="@drawable/button_text_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>