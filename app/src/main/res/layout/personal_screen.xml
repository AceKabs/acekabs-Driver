<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_lay1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <include
        android:id="@+id/per_header"
        layout="@layout/stan_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/per_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/per_header"
        android:layout_gravity="center"
        android:background="#DCDCDC"
        android:gravity="center"
        android:text="Documents Upload"
        android:textColor="@color/black" />


    <LinearLayout
        android:id="@+id/bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/personal_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_bg"
            android:text="NEXT"
            android:textColor="@drawable/button_text_color" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layer"
        android:layout_below="@+id/per_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/per_screen1_lay10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/per_screen1_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="Driver Photo"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/per_screen1_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="Driver Licence Plate"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/per_screen1_lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_left">

                <LinearLayout
                    android:id="@+id/per_screen1_lay31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label_3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="QATAR ID FRONT"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/per_screen1_lay4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label_4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="QATAR ID BACK"
                            android:textColor="@color/whilte" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/per_screen1_lay51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_left">

                <LinearLayout
                    android:id="@+id/per_screen1_lay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label_5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="PASSPORT ID FRONT"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/per_screen1_lay6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_left">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="@color/whilte"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/personal_driver_pic6"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pic_height"
                            android:background="@drawable/frame"
                            android:enabled="false"
                            android:padding="10dp"
                            android:src="@drawable/camera_image" />

                        <TextView
                            android:id="@+id/card_label_6"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_text_back"
                            android:background="#65000000"
                            android:gravity="center"
                            android:text="PASSPORT ID BACK"
                            android:textColor="@color/whilte"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_edit_dob_lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <EditText
                    android:id="@+id/personal_edit_dob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/cal"
                    android:focusable="false"
                    android:gravity="left|center"
                    android:hint="ENTER DOB"
                    android:inputType="text"
                    android:maxLength="50"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>