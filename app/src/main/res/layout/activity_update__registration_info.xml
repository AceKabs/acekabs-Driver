<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LandingPage">

    <include
        android:id="@+id/update_reg_header"
        layout="@layout/profile_stan_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vh_screen1_lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="20dp"
                        android:background="#fff">

                        <com.acekabs.driverapp.RoundRectCornerImageView
                            android:id="@+id/profile_car_registration_front_pic1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_back"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_image" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/subject_name_background"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:gravity="bottom"
                                android:paddingLeft="5dp"
                                android:text="CAR REGISTRATION FRONT"
                                android:textColor="#fff"
                                android:textSize="10sp" />

                            <ImageButton
                                android:id="@+id/Car_Registration_Front_photo_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                />
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="20dp"
                        android:background="#fff">

                        <com.acekabs.driverapp.RoundRectCornerImageView
                            android:id="@+id/profile_car_registration_Back_pic1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_back"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_image" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/subject_name_background">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:gravity="bottom"
                                android:paddingLeft="5dp"
                                android:text="CAR REGISTRATION BACK"
                                android:textColor="#fff"
                                android:textSize="10sp" />

                            <ImageButton
                                android:id="@+id/Car_Registration_Back_photo_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                />
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_top"
                android:background="#DCDCDC"
                android:gravity="center"
                android:text="Vehicle Insurance Documents"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/per_screen1_lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity=""
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="20dp"
                        android:background="#fff">

                        <com.acekabs.driverapp.RoundRectCornerImageView
                            android:id="@+id/profile_vehicle_Insurance_driver_pic1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_back"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera_image" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/subject_name_background">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:gravity="bottom"
                                android:paddingLeft="5dp"
                                android:text="VEHICLE INSURANCE DOCS"
                                android:textColor="#fff"
                                android:textSize="10sp" />

                            <ImageButton
                                android:id="@+id/Car_Vehicle_Insurance_photo_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                />
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/profile_bottom_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/profile_personal_submit"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/btn_bg"
                    android:text="UPDATE"
                    android:textColor="@drawable/button_text_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>