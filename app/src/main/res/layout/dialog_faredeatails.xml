<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="Fare Details"
        android:textColor="@color/whilte"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/btn_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="Total Fare "
            android:textAllCaps="true"
            android:textColor="@color/whilte"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvcurrecnyone"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/whilte"
                android:textSize="21.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtotalfare"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_gravity="center"
                android:layout_marginLeft="3dip"
                android:drawablePadding="3dip"
                android:gravity="center"
                android:text="Total Fare "
                android:textAllCaps="true"
                android:textColor="@color/whilte"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/summary"
        android:textColor="@color/black"
        android:textSize="18.0sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Base Fare  : "
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnytwo"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBaseFareAmount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:drawablePadding="3dip"
                    android:gravity="center|left"
                    android:text="@string/summary"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Extra Km Charges  : "
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnythree"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/extraKmFareAmount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/summary"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Extra Time Charges  : "
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnyfour"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/extramTimeAmount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/summary"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Total Fare  : "
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnyfive"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalFareAmount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:drawablePadding="3dip"
                    android:gravity="center|left"
                    android:text="@string/summary"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Service Tax  : "
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnysix"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvServiceAmount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Discount  : "
                    android:textColor="#f8923d"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tvcurrecnyseven"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="#f8923d"
                    android:textSize="21.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="0.0"
                    android:textColor="#f8923d"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnokay"
                android:layout_width="150dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/whilte"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>